<Window x:Class="PTLCanClient.LightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PTLCanClient"
        mc:Ignorable="d"
        Title="LightWindow" Height="400" Width="600" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="241*"/>
            <ColumnDefinition Width="351*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="tipLabel" Content="请扫描择货单:" HorizontalAlignment="Left" Margin="91,64,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="scanText" 
                 HorizontalAlignment="Left"
                 Height="25" Margin="91,109,0,0" 
                 TextWrapping="Wrap" Text="" 
                 VerticalAlignment="Top" Width="252" Grid.ColumnSpan="2" KeyUp="scanText_KeyUp"/>
        <Button x:Name="okBtn" Content="OK" HorizontalAlignment="Left" Margin="111,109,0,0" VerticalAlignment="Top" Width="71" Height="25" Grid.Column="1" Click="okBtn_Click"/>
        <Button x:Name="cleanBtn"
                Content="Clean" 
                HorizontalAlignment="Left" 
                Margin="200,118,0,0" VerticalAlignment="Top" Width="75" Click="cleanBtn_Click" Grid.Column="1"/>

    </Grid>
</Window>
